<!DOCTYPE html>
<html>
  <head>
    <%- include('header') -%>
  </head>
  <body>
    <h1><%= title %></h1>
    <table class="table">
      <thead class="thead-default">
        <tr>
          <td>ID</td>
          <td>名前</td>
          <td>値段(¥)</td>
          <td>操作</td>
        </tr>
      </thead>
      <tbody id="typelist">
      </tbody>
    </table>


    <%# ひとまずjQueryのAjaxでAPIから取得したJSONを表示%>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script type="text/javascript">
    let getUserList = () => {
      let elm = $("#typelist");
      elm.empty();
      $.ajax({
        url: "/api/v1/type"
      })
      .then(
        (data) => {
          let list;
          for (let i = 0; i < data.length; i++) {
            let line = data[i];
            list+= '<tr>';
            list+= '<td>' + line['id'] + '</td>';
            list+= '<td>' + line['name'] + '</td>';
            list+= '<td>' + line['price'] + '</td>';
            list+='<td><button id="' + line['_id'] + '" class="btn btn-success btn-sm" role="button">編集</button>'
            list+='<button id="' + line['_id'] + '" class="delete btn btn-danger btn-sm" role="button">削除</button></td>'
            list+='</tr>';
          }
          elm.append(list);
        },
        (err) => {
          $("userlist").text(JSON.stringify({message: err}));
        }
      )
    }

    let deleteType = (id) => {
      $.ajax({
        type: "DELETE",
        url: "/api/v1/type/" + id
      })
      .then(
        (data) => {
        },
        (err) => {
          $("userlist").text(JSON.stringify({message: err}));
        }
      )
    }

    $('#typelist').on('click','.delete', function() {
      let Id = $(this).attr("id");
      deleteType(Id);
    });

    $(() => {
      getUserList();
    });
    </script>
  </body>
</html>
